<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacgrount_img"
    tools:context=".QuestionActivity">

    <ImageView
        android:id="@+id/qareken_flag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="282dp"
        android:layout_height="237dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/qaraqalpaq_flag"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="64dp" />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joqaridag'i bayraq qaysi eldin bayrag'i"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/qareken_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Qaraqalpaqstan"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="32dp"
        android:text="Ozbekstan"
        app:layout_constraintTop_toBottomOf="@id/materialButton"
        app:layout_constraintStart_toStartOf="@id/materialButton"
        app:layout_constraintEnd_toEndOf="@id/materialButton"
        app:cornerRadius="50dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Qazaqstan"
        app:layout_constraintStart_toStartOf="@id/materialButton2"
        app:layout_constraintEnd_toEndOf="@id/materialButton2"
        app:layout_constraintTop_toBottomOf="@id/materialButton2"
        app:cornerRadius="50dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Turkmenistan"
        app:layout_constraintTop_toBottomOf="@id/materialButton3"
        app:layout_constraintStart_toStartOf="@id/materialButton3"
        app:layout_constraintEnd_toEndOf="@id/materialButton3"
        app:cornerRadius="50dp" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="10dp"
        android:textStyle="bold|normal"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/materialButton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:max="1200"/>

</androidx.constraintlayout.widget.ConstraintLayout>